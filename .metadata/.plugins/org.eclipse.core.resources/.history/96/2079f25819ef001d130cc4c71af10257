package interview;

public class Ex02 {
	public static void main(String[] args) {
		int[] array = {-1,3,-4,5,1,-6,2,1};
		System.out.println(findBalanceIndex(array));
	}
	public static int findBalanceIndex(int[] A) {
	    int n = A.length;
	    int totalSum = 0;
	    for (int i = 0; i < n; i++) {
	        totalSum += A[i];
	    }
	    int leftSum = 0;
	    for (int i = 0; i < n; i++) {
	        if (leftSum == totalSum - leftSum - A[i]) {
	            return i;
	        }
	        leftSum += A[i];
	    }
	    return -1;
	}
	
}
