package interview;

import java.util.ArrayList;
import java.util.List;

public class Ex02 {
	public static void main(String[] args) {
		int[] array = {-1,3,-4,5,1,-6,2,1};
		System.out.println(getBalanceIndexes(array));
	}
	public static List<Integer> getBalanceIndexes(int[] A) {
        List<Integer> balanceIndexes = new ArrayList<Integer>();
        int leftSum = 0;
        int rightSum = 0;

        for (int i = 0; i < A.length; i++) {
            rightSum += A[i];
        }

        for (int i = 0; i < A.length; i++) {
            rightSum -= A[i];
            if (leftSum == rightSum) {
                balanceIndexes.add(i);
            }
            leftSum += A[i];
        }

        if (balanceIndexes.isEmpty()) {
            return null;
        }

        return balanceIndexes;
    }
	
}
