package interview;

import java.util.HashSet;
import java.util.Set;

public class Ex01 {
	public static void main(String[] args) {
		String x= "a21dcdba1";
		String y= "1bbdca2";
		areSimilar(x, y);
		
	}
	public static void areSimilar(String X,String Y) {
		Set<Character> setX = new HashSet<Character>();
		Set<Character> setY = new HashSet<Character>();
		for(int i =0; i<X.length(); i++) {
			setX.add(X.charAt(i));
		}
		for(int i =0; i<Y.length(); i++) {
			setX.add(Y.charAt(i));
		}
		Set<Character> commonChars = new HashSet<Character>(setX);
        commonChars.retainAll(setY);
        if (commonChars.containsAll(setX) && commonChars.containsAll(setY)) {
            System.out.println("X and Y are already similar.");
            System.out.println("Common characters: " + commonChars);
            System.out.println("X: " + X);
            System.out.println("Y: " + Y);
            return;
        } 
        Set<Character> charsToAdd = new HashSet<Character>(commonChars);
        charsToAdd.removeAll(setX);
        charsToAdd.removeAll(setY);
        while (!charsToAdd.isEmpty()) {
            char c = charsToAdd.iterator().next();
            if (setX.size() < setY.size()) {
                X += c;
                setX.add(c);
            }
            else {
                Y += c;
                setY.add(c);
            }
            charsToAdd.remove(c);
        }
        System.out.println("Common characters: " + commonChars);
        System.out.println("X: " + X);
        System.out.println("Y: " + Y);
        
		
	}

}
